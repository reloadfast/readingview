# Audiobookshelf Configuration
# Copy this file to .env and fill in your values

# Required: Your Audiobookshelf server URL
ABS_URL=https://your-audiobookshelf-server.com

# Required: Your Audiobookshelf API token
# Get this from: Settings -> Users -> Your User -> Generate API Token
ABS_TOKEN=your_api_token_here

# Optional: Application Settings
APP_TITLE=ReadingView
CACHE_TTL=300
ITEMS_PER_ROW=5
THEME=dark

# Optional: Release Tracker
ENABLE_RELEASE_TRACKER=true

# Optional: Notifications (via Apprise)
# Set ENABLE_NOTIFICATIONS=true and configure the Apprise URL/key below.
# Notification frequency and preferences are configurable in the app UI.
# See NOTIFICATIONS.md for full setup instructions (Telegram, Discord, etc.).
ENABLE_NOTIFICATIONS=false
APPRISE_API_URL=http://your-apprise-server:8000
# The notification key is a routing tag you define (any string).
# Notification service URLs (Telegram, Discord, etc.) are configured in Apprise
# itself, not here. Use the same key you used with Apprise's /add/{key} endpoint.
APPRISE_NOTIFICATION_KEY=readingview
